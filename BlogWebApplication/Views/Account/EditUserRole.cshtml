@model BlogWebApplication.ViewModels.EditUserRoleVM

@{
    ViewData["Title"] = "EditUserRole";
}

<h2>Edit User Role</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-2">Role</div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Role, ViewBag.List as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "UserList")
</div>

